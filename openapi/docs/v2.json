    "tags": [],
    "paths": {
        "/anime/{id}": {
            "parameters": [
                {
                    "$ref": "#/components/parameters/idLike"
                }
            ],
            "get": {
                "description": "Get info on an anime",
                "tags": [
                    "Anime"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/anime"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/invalidId"
                    }
                }
            }
        },
