{
    "openapi": "3.0.2",
    "info": {
        "title": "Livechart.me API",
        "description": "unofficial documentation of the \"secret\" livechart api\n\n## This version is actively being developed",
        "version": "2",
        "x-metadata": {
            "keywords": [
                "livechart.me",
                "livechart.me api"
            ]
        }
    },
    "servers": [
        {
            "url": "https://www.livechart.me/api/v2"
        }
    ],
    "components": {
        "responses": {
            "invalidId": {
                "description": "provided id is invalid",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "error": {
                                    "type": "string",
                                    "example": "invalid id"
                                }
                            }
                        }
                    }
                }
            }
        },
        "parameters": {
            "idLike": {
                "name": "id",
                "required": true,
                "in": "path",
                "schema": {
                    "pattern": "[0-9]+"
                }
            },
            "aggrLimit": {
                "name": "limit",
                "in": "query",
                "schema": {
                    "type": "number",
                    "maximum": 500
                }
            },
            "aggrOffset": {
                "name": "offset",
                "in": "query",
                "schema": {
                    "type": "number"
                }
            }
        },
        "schemas": {
            "anime": {
                "type": "object",
